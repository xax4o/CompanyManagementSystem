@model CompanyManagementSystem.DataTransferModels.Employees.InputModels.EmployeeInputModel
@{
    ViewBag.Title = "Add";
}

<h2>Add Employee</h2>

<div class="row">
    @using (Html.BeginForm("Add", "Employees", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-offset-2">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Phone, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(e => e.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Phone)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Position, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(e => e.Position, "Select Position", new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Position)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.Salary, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(e => e.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Salary)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(e => e.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.Workplace, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(e => e.Workplace, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Workplace)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" class="btn btn-default" value="Add Employee" />
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}