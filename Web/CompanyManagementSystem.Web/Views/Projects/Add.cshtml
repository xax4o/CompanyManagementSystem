@model CompanyManagementSystem.DataTransferModels.Projects.InputModels.ProjectInputModel
@{
    ViewBag.Title = "Add";
}

<h2>Add Project</h2>

<div class="row">
    @using (Html.BeginForm("Add", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(p => p.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" class="btn btn-default" value="Add Project" />
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

