@model CompanyManagementSystem.DataTransferModels.Manage.InputModels.EmployeeManageInputModel
@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>

<div class="row">
    @using (Html.BeginForm("Employee", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(t => t.EmployeesToAdd, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ListBoxFor(t => t.EmployeesToAdd, @Model.ListOfFreeEmployees, new { @class = "form-control", SelectionMode = "Multiple" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.EmployeesToRemove, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ListBoxFor(t => t.EmployeesToRemove, @Model.ListOfManagedEmployees, new { @class = "form-control", SelectionMode = "Multiple" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" class="btn btn-default" value="Make Changes" />
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}




