@model CompanyManagementSystem.DataTransferModels.Manage.InputModels.TeamManageInputModel
@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>
<div class="row">
    @using (Html.BeginForm("Team", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(t => t.TeamMembersToAdd, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ListBoxFor(t => t.TeamMembersToAdd, @Model.FreeMembers, new { @class = "form-control", SelectionMode = "Multiple" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.TeamMembersToRemove, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ListBoxFor(t => t.TeamMembersToRemove, @Model.TeamMembers, new { @class = "form-control", SelectionMode = "Multiple" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.ProjectToAdd, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(t => t.ProjectToAdd, @Model.FreeProjects, "Add Project", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" class="btn btn-default" value="Make Changes" />
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

