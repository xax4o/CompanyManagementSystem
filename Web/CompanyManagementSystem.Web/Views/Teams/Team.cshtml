@model CompanyManagementSystem.DataTransferModels.Teams.ViewModels.TeamDetailsViewModel
@{
    ViewBag.Title = "Team";
}

<h2>Details for Team @Model.Name</h2>

<br />

<h3>Team Leader @Model.TeamLeadsName</h3>

@{
    var employeesIndex = 1;
    var projectsIndex = 1;
}

<div class="row">
    <div class="col-md-9">
        <div>
            <h3 class="col-md-offset-4">Team Members</h3>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Salary</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Workplace</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.Employees)
                    {
                        <tr>
                            <td>@(employeesIndex++)</td>
                            <td>@item.Name</td>
                            <td>@item.Position</td>
                            <td>@item.Salary</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Workplace</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3">
        <div>
            <h3 class="col-md-offset-3">Projects</h3>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.Projects)
                    {
                        <tr>
                            <td>@(projectsIndex++)</td>
                            <td>@item.Name</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

