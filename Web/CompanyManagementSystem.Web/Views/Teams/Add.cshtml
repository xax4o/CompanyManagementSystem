@model CompanyManagementSystem.DataTransferModels.Teams.InputModels.TeamInputModel
@{
    ViewBag.Title = "Add";
}
<h2>Add Team</h2>

<div class="row">
    @using (Html.BeginForm("Add", "Teams", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(t => t.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(t => t.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.ProjectTeamLeadId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(t => t.ProjectTeamLeadId, @Model.TeamLeads, "Select Team Leader", new { @class = "form-control" })
                @Html.ValidationMessageFor(t => t.ProjectTeamLeadId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.TeamMembersIds, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ListBoxFor(t => t.TeamMembersIds, @Model.TeamMembers, new { @class = "form-control", SelectionMode = "Multiple" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" class="btn btn-default" value="Add Team" />
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

